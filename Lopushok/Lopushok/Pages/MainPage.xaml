<Page x:Class="Lopushok.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid Background="White">
        <StackPanel Margin="100">
            <ComboBox VerticalContentAlignment="Center" x:Name="ProductCB"  Height="60" Width="835" FontSize="24">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  FontSize="20"  Text="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Height="100" Content="выбрать фотку" Margin="100" Click="Button_Click">
                
            </Button>
            <Button Height="100" Content="сохранить" Margin="100">

            </Button>
        </StackPanel>
    </Grid>
</Page>
